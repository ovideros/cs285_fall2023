{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "hw2: HalfCheetah 调试 (uv + debugpy)",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "${workspaceFolder}/cs285/scripts/run_hw2.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "--env_name", 
                "HalfCheetah-v4",
                "-n",
                "100",
                "-b",
                "5000",
                "-rtg",
                "--discount",
                "0.95",
                "-lr",
                "0.01",
                "--use_baseline",
                "--exp_name",
                "cheetah_baseline"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
